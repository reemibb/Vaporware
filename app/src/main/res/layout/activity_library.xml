<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer1_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    tools:context=".LibraryActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="#242424"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menuButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableBottom="@drawable/menu"
                android:paddingBottom="13dp"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck,VisualLintButtonSize" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="30dp"
                app:srcCompat="@drawable/logo"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <Button
                android:id="@+id/dot_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/menu_dots"
                android:text="Button"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tilt_warp"
            android:text="Library"
            android:textAlignment="center"
            android:textColor="#D5D4D4"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded,RtlSymmetry">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/fav"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/song_button"
                    android:layout_width="122dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:text="Liked Songs"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="3dp"
                    android:text=" "
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="#575757"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/create_button"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/plus"
                android:paddingStart="20dp"
                android:paddingTop="7dp"
                android:text=""
                tools:ignore="RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintButtonSize" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tilt_warp"
                android:text="Playlist"
                android:textAlignment="center"
                android:textColor="#D5D4D4"
                android:textSize="26sp"
                tools:ignore="HardcodedText,VisualLintBounds" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/manage_button"
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/grip_lines"
                android:paddingEnd="10dp"
                android:text=""
                tools:ignore="RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintButtonSize" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:id="@+id/playlists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/playlist1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button_playlist1"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/cancel"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp"
                        android:visibility="gone"
                        android:text=" "
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="5dp">

                    <ImageButton
                        android:id="@+id/play1_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/summer"
                        android:clipToOutline="true"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:padding="0dp" />

                </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingTop="5dp"
                        android:orientation="vertical"
                        tools:ignore="InefficientWeight,RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/playlist1"
                            android:layout_width="122dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:paddingEnd="20dp"
                            android:text="Summer"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:text="[number]"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/playlist2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button_playlist2"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/cancel"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp"
                        android:text=" "
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="5dp">

                        <ImageButton
                            android:id="@+id/play2_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/chill"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_button"
                            android:gravity="center"
                            android:scaleType="fitCenter"
                            android:padding="0dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingTop="5dp"
                        android:orientation="vertical"
                        tools:ignore="InefficientWeight,RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/playlist2"
                            android:layout_width="122dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:text="Chill Vibes"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:text="[number]"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/playlist3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button_playlist3"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/cancel"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp"
                        android:text=" "
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="5dp">

                        <ImageButton
                            android:id="@+id/play3_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/party"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_button"
                            android:gravity="center"
                            android:scaleType="fitCenter"
                            android:padding="0dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingTop="5dp"
                        android:orientation="vertical"
                        tools:ignore="InefficientWeight,RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/playlist3"
                            android:layout_width="122dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:text="Party Mix"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:text="[number]"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/playlist4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button_playlist4"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/cancel"
                        android:paddingTop="20dp"
                        android:paddingEnd="10dp"
                        android:text=" "
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_margin="5dp">

                        <ImageButton
                            android:id="@+id/play4_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/workout"
                            android:clipToOutline="true"
                            android:background="@drawable/rounded_button"
                            android:gravity="center"
                            android:scaleType="fitCenter"
                            android:padding="0dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingTop="5dp"
                        android:orientation="vertical"
                        tools:ignore="InefficientWeight,RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/playlist4"
                            android:layout_width="122dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:text="Workout"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:text="[number]"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/playlist5_layout"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel_button_playlist5"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/cancel"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp"
                    android:text=" "
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:cardCornerRadius="10dp"
                    android:background="#1D1D1D"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp">

                    <ImageButton
                        android:id="@+id/play5_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#1D1D1D"
                        android:clipToOutline="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                         />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:orientation="vertical"
                    tools:ignore="InefficientWeight,RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/playlist5"
                        android:layout_width="122dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:text=""
                        android:textColor="@color/white"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />
                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="3dp"
                        android:text=""
                        tools:ignore="HardcodedText,TextContrastCheck" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#242424"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer1_menu"
        tools:ignore="VisualLintBounds" />

</androidx.drawerlayout.widget.DrawerLayout>