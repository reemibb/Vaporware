<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D1D1D"
            tools:context=".HomeActivity">

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="889dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="#242424"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/menuButton"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableBottom="@drawable/menu"
                        android:paddingBottom="13dp"
                        tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="301dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        app:srcCompat="@drawable/logo"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/profile_button"
                        android:layout_width="50dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawableBottom="@drawable/pfp"
                        android:text="u"
                        tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

                </LinearLayout>

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/search_bar"
                    android:drawableStart="@drawable/search_icon"
                    android:hint="Search..."
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textColorHint="#717171"
                    android:textSize="16sp"
                    tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextContrastCheck" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageButton
                                android:id="@+id/ad1_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_playlist"
                                android:backgroundTint="@android:color/transparent"
                                android:contentDescription="Playlist button"
                                android:scaleType="fitXY"
                                android:text=""
                                app:srcCompat="@drawable/ad1"
                                tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,ImageContrastCheck,RedundantDescriptionCheck" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageButton
                                android:id="@+id/ad2_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_playlist"
                                android:backgroundTint="@android:color/transparent"
                                android:contentDescription="Playlist button"
                                android:scaleType="fitXY"
                                android:text=""
                                app:srcCompat="@drawable/ad2"
                                tools:ignore="HardcodedText,RedundantDescriptionCheck" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageButton
                                android:id="@+id/ad3_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/app_playlist"
                                android:backgroundTint="@android:color/transparent"
                                android:contentDescription="Playlist button"
                                android:scaleType="fitXY"
                                android:text=""
                                app:srcCompat="@drawable/ad3"
                                tools:ignore="HardcodedText" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    tools:ignore="TextSizeCheck">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popular Today"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/pop_see"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:background="@drawable/settings_button"
                        android:text="See all >"
                        android:textColor="#8A8A8A"
                        tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/popularToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/pop1_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    app:srcCompat="@drawable/ag"
                                    tools:ignore="HardcodedText,RedundantDescriptionCheck" />

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="we can't be friends"
                                android:textColor="@color/white"
                                android:layout_marginStart="25dp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Ariana Grande"
                                android:textColor="#999999"
                                android:layout_marginStart="25dp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/pop2_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    app:srcCompat="@drawable/chappell"
                                    tools:ignore="HardcodedText,RedundantDescriptionCheck" />

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Good Luck, Babe!"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Chappell Roan"
                                android:textColor="#999999"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/pop3_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    app:srcCompat="@drawable/birds"
                                    tools:ignore="HardcodedText,ImageContrastCheck,RedundantDescriptionCheck" />

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="BIRDS OF A FEATHER"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Billie Eilish"
                                android:textColor="#999999"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/pop4_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    app:srcCompat="@drawable/birds"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    tools:ignore="HardcodedText" />

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="CHIHIRO"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Billie Eilish"
                                android:textColor="#999999"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    tools:ignore="TextSizeCheck">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Playlists"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/playlist_see"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="125dp"
                        android:background="@drawable/settings_button"
                        android:text="See all >"
                        android:textColor="#8A8A8A"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/playlistScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/play1_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    app:srcCompat="@drawable/summer"
                                    tools:ignore="HardcodedText,RedundantDescriptionCheck" />

                            </androidx.cardview.widget.CardView>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:text="Summer"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText,TextContrastCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/play2_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    app:srcCompat="@drawable/chill"
                                    tools:ignore="HardcodedText,RedundantDescriptionCheck" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Chill Vibes"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText,TextContrastCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/play3_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    app:srcCompat="@drawable/party"
                                    tools:ignore="HardcodedText,ImageContrastCheck,RedundantDescriptionCheck" />

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Party Mix"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/play4_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/app_playlist"
                                    android:contentDescription="Playlist button"
                                    app:srcCompat="@drawable/workout"
                                    android:scaleType="fitXY"
                                    android:text=""
                                    tools:ignore="HardcodedText" />

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Workout"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/player_bar"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:background="@drawable/app_playlist"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/play_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/app_playlist"
                        android:contentDescription="Playlist button"
                        android:scaleType="fitXY"
                        android:text=""
                        app:srcCompat="@drawable/ag"
                        tools:ignore="HardcodedText,RedundantDescriptionCheck" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="233dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="253dp"
                        android:layout_height="73dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="146dp"
                            android:layout_height="84dp"
                            android:orientation="vertical"
                            tools:ignore="TextSizeCheck">

                            <TextView
                                android:id="@+id/song_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="we can't be friends"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/artist_name"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:text="Ariana Grande"
                                tools:ignore="HardcodedText,TextContrastCheck" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/play_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/play_button"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="230dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:progressDrawable="@color/white"
                        android:thumbOffset="20dp"
                        android:max="100" />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#242424"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        tools:ignore="VisualLintBounds" />
</androidx.drawerlayout.widget.DrawerLayout>
